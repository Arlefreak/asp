.about
    display flex
    flex-flow row wrap
    align-items flex-start
    justify-content space-between
.about-img
    height auto
    display block
    width 100%
    float none
    margin 0 4.0 0 0
    @media screen and (min-width: 640px)
        width 48%
        float left
.about
    article
        display block
        float none
        width 100%
        margin 40px 0 0 0
        @media screen and (min-width: 640px)
            margin 0
            width 48%
        header
            clear both
            display block
            overflow hidden
            margin 0 0 21px 0
            h2
                margin 0
                img
                    width 30%
                    height auto
                    display block
                    @media screen and (min-width: 640px)
                        width 50%
        p
            text-align justify
            font-size 0.4em
            @media screen and (min-width: 1024px)
                font-size 0.6em
            @media screen and (min-width: 1400px)
                font-size 0.8em
        #aboutInfo
            letter-spacing 0.2em
            line-height 200%

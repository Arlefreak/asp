.proyects
    a
        width 29%
        overflow hidden
        position relative
        padding 29% 0 0 0
        display inline-block
        margin 0 3.356752537080406% 43px 0
        @media screen and (min-width: 640px)
            padding 20% 0 0 0
            width 20%
        &.left
            img
                margin 0 0 0 16%
        &.rigt
            img
                margin 0 0 0 -16%
        &.up
            img
                margin 16% 0 0 0
        &.down
            img
                margin -16% 0 0 0
        &.cntr
            img
                margin 0 0 0 0
        &:hover
            img.blackAndWhite
                visibility hidden
                opacity 0
        img
            position absolute
            top 0
            width 100%
            height auto
            display block
            transition visibility 2s ease 2s,opacity 2s ease
    article
        width 30%
        display block
        span
            margin 20px 0 20px 33.59683794466403%
            display block
            font-size 0.5em
            @media screen and (min-width: 640px)
                margin 20px 0 43px 33.59683794466403%
                font-size 0.7em
            @media screen and (min-width: 1024px)
                font-size 0.8em
            @media screen and (min-width: 1400px)
                font-size 1.0em
        a
            width 100%
            padding 100% 0 0 0
            margin 0

.press
    div
        display flex
        width 100%
        justify-content space-between
        align-items flex-start
        margin 0 auto 20px auto
    a
        width 48%
    .about-img
        width 100%
        height auto
        display block
        float right
        margin 0
    section
        margin 0 0 20px 0
        display flex
        flex-flow row wrap
        justify-content space-between
        align-items center
    article
        display block
        float right
        width 45%
        header
            clear both
            display block
            overflow hidden
            h2
                margin 0 0 0 0
                font-weight 400
                letter-spacing 0.2em
                font-size 0.8em
                @media screen and (min-width: 640px)
                    margin 0 0 43px 0
                @media screen and (min-width: 1024px)
                    font-size 1.2em
                @media screen and (min-width: 1400px)
                    font-size 1.4em
                a
                    color black
                    text-decoration none
        p
            text-align justify
            font-size 0.4em
            @media screen and (min-width: 1024px)
                font-size 0.6em
            @media screen and (min-width: 1400px)
                font-size 0.8em

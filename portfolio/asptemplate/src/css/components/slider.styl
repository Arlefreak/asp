.slider
    div
        width 100%
    a
        width 100%
        overflow hidden
        position relative
        height 70vh
        display block
        margin auto
        &:hover
            img.blackAndWhite
                visibility hidden
                opacity 0
        img
            position absolute
            width 100%
            height 100%
            object-fit cover
            display block
            transition visibility 2s ease 2s,opacity 2s ease
